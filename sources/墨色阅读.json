  },
  "catalog": {
    "list": "$.chapters.[*]",
    "orderBy": 0,
    "chapter": {
      "name": "$.title",
      "link": "$.link@js->'http://chapter.wgfgr.cn/chapter/' + encodeURIComponent(${this})"
    }
  },
  "content": {
    "text": "$..body"
  },
