{
  "name": "呵呵小说",
  "version": 100,
  "category": 1,
  "url": "https://www.heheba.com",
  "charset": "utf-8",
  "metadata": {
    "name": ["p.info > span:nth-child(1) > a"],
    "author": ["p.info > span:nth-child(2) > a"],
    "cover": ["div.pt-ll-l > a > img@attr->src"],
    "summary": ["p.intro"],
    "category": ["p.info > span:nth-child(3) > a"],
    "status": ["meta[property=og:novel:status]@attr->content"],
    "update": ["meta[property=og:novel:update_time]@attr->content"],
    "lastChapter": ["meta[property=og:novel:latest_chapter_name]@attr->content"],
    "link": ["a:nth-child(1)@attr->href"],
    "catalog": [""]
  },
  "catalog": {
    "list": "ul > li.hide",
    "orderBy": 0,
    "chapter": {
      "name": "a",
      "link": "a@attr->href"
    }
  },
  "content": {
    "text": "div#chaptercontent"
  },
  "search": {
    "link": "https://www.heheba.com/search.html?searchkey=${key}",
    "list": "ul.librarylist > li"
  }
