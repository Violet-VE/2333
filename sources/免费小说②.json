{
  "name": "免费小说②",
  "version": 101,
  "category": 1,
  "url": "https://reader.browser.duokan.com",
  "charset": "utf-8",
  "metadata": {
    "name": ["$.title", "$..name"],
    "author": ["$..author"],
    "cover": ["$.image", "$..imageUrl", "$.imgUrl"],
    "summary": ["$..description"],
    "category": ["$..tags[0]"],
    "status": ["$..bookStatus"],
    "update": [],
    "lastChapter": ["$..chapterName"],
    "link": ["$.id@js->'https://reader.browser.duokan.com/api/v2/book/' + ${this}"],
    "catalog": ["$..bookId@js->'https://reader.browser.duokan.com/api/v2/chapter/list/' + ${this}"],
    "custom": ["$..bookId"]
  },
  "catalog": {
    "list": "$..list[*]",
    "orderBy": 0,
    "chapter": {
      "name": "$.chapterName",
      "link": "$.chapterId@js->'https://reader.browser.duokan.com/api/v2/chapter/content/' + ${custom[0]} + '/?chapterId=' + ${this} + '&volumeId=1'"
    }
  },
  "content": {
    "text": "$.data.contentList[*]"
  },
  "search": {
    "link": "https://reader.browser.duokan.com/search-api/v2/novel/search?size=50&query=${key}&start=0",
    "list": "$.related"
  }
}